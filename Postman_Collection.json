            "item": [
                {
                    "name": "1. Signup - Create New User",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "// Save the token to environment variable for use in other requests",
                                    "if (pm.response.code === 201) {",
                                    "    var jsonData = pm.response.json();",
                                    "    pm.environment.set(\"auth_token\", jsonData.token);",
                                    "    pm.environment.set(\"user_id\", jsonData.user.id);",
                                    "    pm.environment.set(\"user_email\", jsonData.user.email);",
                                    "    console.log(\"Token saved:\", jsonData.token);",
                                    "}",
                                    "",
                                    "// Test assertions",
                                    "pm.test(\"Status code is 201\", function () {",
                                    "    pm.response.to.have.status(201);",
                                    "});",
                                    "",
                                    "pm.test(\"Response has token\", function () {",
                                    "    var jsonData = pm.response.json();",
                                    "    pm.expect(jsonData).to.have.property('token');",
                                    "});",
                                    "",
                                    "pm.test(\"Response has user object\", function () {",
                                    "    var jsonData = pm.response.json();",
                                    "    pm.expect(jsonData).to.have.property('user');",
                                    "    pm.expect(jsonData.user).to.have.property('email');",
                                    "    pm.expect(jsonData.user).to.not.have.property('password');",
                                    "});"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"email\": \"john.doe@example.com\",\n  \"password\": \"password123\",\n  \"name\": \"John Doe\"\n}"
                        },
                        "url": {
